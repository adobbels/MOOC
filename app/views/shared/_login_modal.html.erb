<div class="modal fade" id="login" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <div class="wm-modallogin-form wm-login-popup">
            <span class="wm-color">Connectez-vous</span>
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <form>
                  <ul>
                    <li> <%= f.input :email, required: true, autofocus: true, label: false, placeholder:"e-mail", input_html: { style: "border-radius: 0; height: 43px; border-bottom: 2px solid #eaeaea; padding: 6px 21px; font-size: 15px; color: #a9a9a9; font-style: italic;" } %></li>
                    <li> <%= f.input :password, required: true, label: false, placeholder:"mot de passe",input_html: { style: "border-radius: 0; height: 43px; border-bottom: 2px solid #eaeaea; padding: 6px 21px; font-size: 15px; color: #a9a9a9; font-style: italic;" }  %></li>
                    <li> <%= link_to "Mot de passe oublié ?", "#password", "data-toggle" => "modal", "data-dismiss" => "modal", "aria-hidden" => "true", class:"wm-forgot-btn", input_html: { style: "text-decoration: none" } %> </li>
                  </ul>
                <div class="form-actions">
                  <%= f.button :submit, "Se Connecter", style: "border-radius: 0px"  %>
                </div>
              </form>
            <% end %>
            <span class="wm-color">Suivez-nous sur les réseaux sociaux</span>
            <ul class="wm-login-social-media">
                <li><a href="#"><i class="wmicon-social5"></i> Facebook</a></li>
                <li class="wm-twitter-color"><a href="#"><i class="wmicon-social4"></i> twitter</a></li>
                <li class="wm-googleplus-color"><a href="#"><i class="fa fa-google-plus-square"></i> Google+</a></li>
            </ul>
            <p>Pas encore membre? <a <%= link_to "Inscrivez-vous", "#sign_up", "data-toggle" => "modal", style:"text-decoration: none", "data-dismiss" => "modal", "aria-hidden" => "true" %> </a></p>
        </div>
      </div>
    </div>
    <div class="clearfix"></div>
  </div>
</div>
